<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"

    android:scrollbars="horizontal|vertical"
    tools:context=".patients.info.PatientsInfo">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/profileimage"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="8dp"
                            android:src="@drawable/patient" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fullnameInfo2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:inputType="textPersonName"
                                android:minHeight="48dp"
                                android:padding="8dp"
                                android:text="Name"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fullnameInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:inputType="textPersonName"
                                android:minHeight="48dp"
                                android:padding="8dp"
                                android:textAlignment="textStart" />

                        </LinearLayout>

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sex_info2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:inputType="textPersonName"
                                android:minHeight="48dp"
                                android:padding="8dp"
                                android:text="Sex"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sex_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:minHeight="48dp"
                                android:padding="8dp" />

                        </LinearLayout>

                        <View
                            android:id="@+id/dividers3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/age_info2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:inputType="number"
                                android:minHeight="48dp"
                                android:padding="8dp"
                                android:text="Age"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/age_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="number"
                                android:minHeight="48dp"
                                android:padding="8dp" />

                        </LinearLayout>

                        <View
                            android:id="@+id/divr3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/phone_info2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:inputType="number"
                                android:minHeight="48dp"
                                android:padding="8dp"
                                android:text="Phone"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/phone_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="number"
                                android:minHeight="48dp"
                                android:padding="8dp" />

                        </LinearLayout>

                        <View
                            android:id="@+id/dr3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/job_info2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:inputType="textPersonName"
                                android:minHeight="48dp"
                                android:padding="8dp"
                                android:text="Job"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/job_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:minHeight="48dp"
                                android:padding="8dp" />


                        </LinearLayout>

                        <View
                            android:id="@+id/er3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mail_info2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:inputType="textEmailAddress"
                                android:minHeight="48dp"
                                android:padding="8dp"
                                android:text="Mail"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/mail_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textEmailAddress"
                                android:minHeight="48dp"
                                android:padding="8dp" />


                        </LinearLayout>

                        <View
                            android:id="@+id/r3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/complain_info2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:inputType="textPersonName"
                                android:minHeight="48dp"
                                android:padding="8dp"
                                android:text="Complain"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/complain_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:minHeight="48dp"
                                android:padding="8dp" />

                        </LinearLayout>

                        <View
                            android:id="@+id/divaider3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/notes_info2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:gravity="start|top"
                                android:inputType="textMultiLine"
                                android:minHeight="48dp"
                                android:padding="8dp"
                                android:text="note"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/notes_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:gravity="start|top"
                                android:inputType="textMultiLine"
                                android:minHeight="48dp"
                                android:padding="8dp" />

                        </LinearLayout>

                        <View
                            android:id="@+id/der3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:id="@+id/nextlinear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/next2"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:gravity="start|top"
                                android:inputType="textMultiLine"
                                android:minHeight="48dp"
                                android:padding="8dp"
                                android:text="next visit"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/next"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:gravity="start|top"
                                android:inputType="textMultiLine"
                                android:minHeight="48dp"
                                android:padding="8dp" />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/buttonsH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/call"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_but"
                        android:text="Call" />

                    <Button
                        android:id="@+id/whatsapp"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_but"
                        android:text="Whatsapp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/prescription"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/custom_but"
                        android:text="prescription">

                    </Button>

                    <Button
                        android:id="@+id/media"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/custom_but"
                        android:text="Media">

                    </Button>

                    <Button
                        android:id="@+id/bookBu"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/custom_but"
                        android:text="Booking" />

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="64dp"
                        android:background="@drawable/custom_but"
                        android:text="Canel Booking" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>